<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<AnchorPane id="AnchorPane" prefHeight="400" prefWidth="300" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.sbs.fswi2.CalculatorController">
    <children>
        <TextField fx:id="display" layoutX="10.0" layoutY="10.0" prefHeight="60.0" prefWidth="280.0" promptText="0.0" />
        <FlowPane layoutX="10.0" layoutY="80.0" prefHeight="310.0" prefWidth="280.0" hgap="10.0" vgap="10.0">
            <children>
                <Button mnemonicParsing="false" text="1" onAction="#handleButtonClick" />
                <Button mnemonicParsing="false" text="2" onAction="#handleButtonClick" />
                <Button mnemonicParsing="false" text="3" onAction="#handleButtonClick" />
                <Button mnemonicParsing="false" text="4" onAction="#handleButtonClick" />
                <Button mnemonicParsing="false" text="5" onAction="#handleButtonClick" />
                <Button mnemonicParsing="false" text="6" onAction="#handleButtonClick" />
                <Button mnemonicParsing="false" text="7" onAction="#handleButtonClick" />
                <Button mnemonicParsing="false" text="8" onAction="#handleButtonClick" />
                <Button mnemonicParsing="false" text="9" onAction="#handleButtonClick" />
                <Button mnemonicParsing="false" text="0" onAction="#handleButtonClick" />
                <Button mnemonicParsing="false" text="+" onAction="#handleButtonClick" />
                <Button mnemonicParsing="false" text="-" onAction="#handleButtonClick" />
                <Button mnemonicParsing="false" text="*" onAction="#handleButtonClick" />
                <Button mnemonicParsing="false" text="/" onAction="#handleButtonClick" />
                <Button mnemonicParsing="false" text="=" onAction="#handleButtonClick" />
                <Button mnemonicParsing="false" text="C" onAction="#handleButtonClick" />
            </children>
        </FlowPane>
    </children>
</AnchorPane>
